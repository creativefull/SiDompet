<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_blue_grey"
    android:padding="5dp"
    android:id="@+id/layout_row_images">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pink"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_attach_money_white_24dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#FFFFFF"
        android:typeface="sans"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="Membeli Beras"/>
    <TextView
        android:id="@+id/amount"
        android:text="Rp 20.000"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tglTrx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2016-08-19"
        android:layout_below="@+id/amount"
        android:textColor="#CCCCCC"
        android:layout_toRightOf="@+id/thumbnail"/>
    <TextView
        android:id="@+id/id_trx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="0"/>
</RelativeLayout>